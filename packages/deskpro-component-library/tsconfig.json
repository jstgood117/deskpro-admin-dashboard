{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "dist/lib",
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
