{
  "extends": ["@optics/codestyle", "tslint-react"],
  "rules": {
    "jsx-no-multiline-js": false,
    "interface-name": false,
    "semicolon": true,
    "no-var-requires": false,
    "jsx-no-lambda": false,
    "jsx-wrap-multiline": false,
    "no-bitwise": false,
    "no-console": false,
    "no-shadowed-variable": false,
    "no-unused-expression": false,
    "no-empty": false,
    "indent": [true, "spaces", 2]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
